block vars	
	- const id = "home"
	- const {title, author, geography, copyright, email, description, keywords, lang} = general
	- const {prefix, baseurl,imagespath} = base

include ../components/menu/index

doctype html
html(lang="fr",id=`${prefix}-${id}-html`)
	head
		link(rel="canonical" href=baseurl)
		include ./includes/_meta
		block meta
		include ./includes/_favicon.pug
		meta(name="description" content=metaDescription || description)
		meta(name="keywords" content=metaKeywords || keywords)
		title
			= metaTitle || title
		<!--[if lte IE 8]><script src="//html5shiv.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
		link(rel="shortcut icon" href="img/favicon.ico")
		link(href=`${basedir}bundle.css` rel="stylesheet" type='text/css')
		style
			block style		
	body(id=`${prefix}-${id}-body` class=browser)
		.container
			include ../components/header/index
			block menu
			block content
			include ../components/footer/index
		script(src=`${basedir}bundle.js`)
		block scriptPage